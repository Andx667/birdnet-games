            generateSingleCard() {
                // Select mix of common and rare birds for balanced gameplay
                const commonBirds = BIRDS.slice(0, Math.min(50, Math.floor(BIRDS.length * 0.3)));
                const rareBirds = BIRDS.slice(Math.min(50, Math.floor(BIRDS.length * 0.3)));
                
                // Randomly select 18 common and 6 rare birds
                const selectedCommon = commonBirds.sort(() => Math.random() - 0.5).slice(0, 18);
                const selectedRare = rareBirds.sort(() => Math.random() - 0.5).slice(0, 6);
                
                // Combine and shuffle
                const board = [...selectedCommon, ...selectedRare].sort(() => Math.random() - 0.5);
                
                // Insert free space at position 12 (center of 5x5 grid)
                board.splice(12, 0, { name: 'FREE', isFree: true });
                
                return board;
            }

