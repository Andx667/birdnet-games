                        cell.addEventListener('click', () => this.toggleMark(index));
                    }
                    
                    this.bingoBoard.appendChild(cell);
                });
            }

            toggleMark(index) {
                if (this.board[index].isFree) return;
                
                const cell = this.bingoBoard.children[index];
                
                if (this.markedCells.has(index)) {
                    this.markedCells.delete(index);
                    cell.classList.remove('marked');
                    const overlay = cell.querySelector('.mark-overlay');
                    if (overlay) overlay.remove();
                } else {
                    this.markedCells.add(index);
                    cell.classList.add('marked');
                    const overlay = document.createElement('div');
                    overlay.className = 'mark-overlay';
                    overlay.textContent = 'âœ“';
                    cell.appendChild(overlay);
                }
                
                this.updateMarkedCount();
                this.checkForBingo();
            }

            updateMarkedCount() {
                const marked = this.markedCells.size;
                this.markedCount.textContent = `${marked} / 24`;
            }

            startGame() {
                if (this.gameActive) return;
                
                this.gameActive = true;
                this.calledBirds = [];
                this.currentBirdIndex = -1;
                this.startBtn.disabled = true;
                this.startBtn.textContent = 'Game Running...';
                this.currentCall.classList.add('active');
                
                this.callNextBird();
                this.callInterval = setInterval(() => this.callNextBird(), this.callDelay);
            }

            callNextBird() {
                // Find uncalled birds that are on the board
                const uncalledBoardBirds = this.board
                    .map((bird, index) => ({ bird, index }))
                    .filter(({ bird }) => !bird.isFree && !this.calledBirds.some(cb => cb.name === bird.name));
                
                if (uncalledBoardBirds.length === 0) {
                    this.stopGame();
                    return;
                }
                
                // Pick random bird from uncalled board birds
                const { bird, index } = uncalledBoardBirds[Math.floor(Math.random() * uncalledBoardBirds.length)];
                
                this.calledBirds.push(bird);
                this.calledCount.textContent = this.calledBirds.length;
                
                // Update current call display
                this.currentCall.innerHTML = `
                    <div class="call-label">Current Bird</div>
                    <img src="${bird.imageUrl}" alt="${bird.name}" class="call-bird-image" onerror="this.style.display='none'">
                    <div class="call-bird-name">${bird.name}</div>
                `;
            }

            stopGame() {
                this.gameActive = false;
                if (this.callInterval) {
                    clearInterval(this.callInterval);
                    this.callInterval = null;
                }
                this.startBtn.disabled = false;
                this.startBtn.textContent = 'Start Game';
                this.currentCall.classList.remove('active');
            }

