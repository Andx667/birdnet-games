            updateMarkedCounts() {
                this.player1Marked.textContent = this.markedCells1.size;
                this.player2Marked.textContent = this.markedCells2.size
                
                this.board.forEach((bird, index) => {
                    const cell = document.createElement('div');
                    cell.className = 'bingo-cell';
                    cell.dataset.index = index;
                    
                    if (bird.isFree) {
                        cell.classList.add('free', 'marked');
                        cell.innerHTML = `<div class="cell-name">FREE<br>SPACE</div>`;
                    } else {
                        const img = document.createElement('img');
                        img.className = 'cell-image';
